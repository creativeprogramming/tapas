block head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
  block head_title:
    title= (typeof(title) != 'undefined' && title || "Welcome") + (typeof(site_name) != 'undefined' && (" | " + site_name) || "")
  if typeof(description) != 'undefined' && description != ''
    meta(name='description', content=description)
  meta(name='viewport', content='width=device-width')
  block css_libraries
    link(rel='stylesheet', href='stylesheets/bootstrap.css')
  block css_custom
    link(rel='stylesheet', href='stylesheets/style.css')
  block js_libraries
    block js_libraries_jquery
      script(src='//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js')
      script window.jQuery || document.write('<script src="javascripts/vendors/jquery-1.7.2.min.js"><\\/script>')
    block js_libraries_modernizer
      script(src='javascripts/vendors/modernizr-2.5.3.min.js')
    block js_libraries_plugins
      script(src='javascripts/plugins.js')
  block js_custom
    script(src='javascripts/script.js')
