block head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
  block head_title:
    title= (typeof(title) != 'undefined' && title || "Welcome") + (typeof(site_name) != 'undefined' && (" | " + site_name) || "")
  if typeof(description) != 'undefined' && description != ''
    meta(name='description', content=description)
  if typeof(author) != 'undefined' && author != ''
    meta(name='author', content=author)
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(rel='shortcut icon', href='/favicon.ico')
  block css_libraries
    for css_library in css_libraries
      link(rel='stylesheet', href=css_library)
    if use.bootstrap
      link(rel="stylesheet", href='/vendor/bootstrap/css/bootstrap.css')
      if use.fontawesome
        link(rel="stylesheet", href='/vendor/fontawesome/css/font-awesome.css')
  block css_custom
    != tapas_assets.css('tapas')
    //- link(rel='stylesheet', href='/css/style.css')
    :stylus
      .sidebar-nav
        padding: 9px 0
    if use.bootstrap
      if use.bootstrap.fixedNavbar
        :stylus
          body
            padding-top: 60px
            padding-bottom: 40px
  block js_libraries
    //if lt IE 9
      script(src="http://html5shim.googlecode.com/svn/trunk/html5.js", type="text/javascript")
    block js_libraries_jquery
      //- todo: optional in settings: script(src='//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js', type="text/javascript")
      //- script window.jQuery || document.write('<script src="/vendor/jquery/jquery-1.8.1.js"><\\/script>')
      script(src="/vendor/jquery/jquery-1.8.1.js", type="text/javascript")
    block js_libraries_modernizer
      //- script(src='/vendor/modernizr-2.5.3.min.js', type="text/javascript")
    block js_libraries_plugins
      //- script(src='/javascripts/plugins.js', type="text/javascript")
      //- != tapas_assets.js('plugins')
  block js_custom
    != tapas_assets.js('tapas')
