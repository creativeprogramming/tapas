- grid.content = grid.size - ((!!regions.left || !!menus.left) * grid.left) - ((!!regions.right || !!menus.right) * grid.right)
block header
  #header.navbar.navbar-inverse(class=use.bootstrap && use.bootstrap.fixedNavbar && 'navbar-fixed-top' || '')
    .navbar-inner
      div(class=use.bootstrap.fluid && 'container-fluid' || 'container')
        if use.bootstrap.collapsibleNavbar
          a.btn.btn-navbar(data-toggle="collapse", data-target=".nav-collapse")
            span.icon-bar
            span.icon-bar
            span.icon-bar
        a.brand(href="/")= site_name
        div(class=use.bootstrap.collapsibleNavbar && 'nav-collapse collapse')
          if regions.navbarLinks
            ul.nav
              - for item, path in regions.navbarLinks
                li(class=path == current && 'active')
                  a(href=path)= item
          if true
            form.navbar-form.pull-right
              input.span2(type="text", placeholder="Email")
              input.span2(type="password", placeholder="Password")
              button.btn(type="submit") Sign in
          else
            .navbar-text.pull-right
              | Logged in as 
              a.navbar-link(href="/user/42") Username
block page
  #page(class=use.bootstrap.fluid && 'container-fluid' || 'container')
    div(class=use.bootstrap.fluid && 'row-fluid' || 'row')
      if menus.left || regions.left
        div.left(class=classes.left, class="span#{grid.left}")
          if menus.left
            .well.menu
              ul.nav.nav-list
                for link, path in menus.left
                  li(class=(link.childrens && 'nav-header'))
                    //- li.nav-header= category
                    a(href=path, class=(path == current && 'active'))= link.title
                    if link.childrens
                      ul
                      for childLink, childPath in link.childrens
                        li
                          a(href=childPath, class=(childPath == current && 'active'))= childLink.title
          if regions.left
            - for content, className in regions.left
              div(class=className)!= content
      div(class=classes.content, class="span#{grid.content}")
        .hero-unit
          block title
            h1.page-title= title
          include messages
          block content
            p Lorem Ipsum
            p: a.btn.btn-primary.btn-large Learn more &raquo;
      if menus.right || regions.right
        div.right(class=classes.right, class="span#{grid.right}")
          if menus.right
            .well.menu
              ul.nav.nav-list
                for link, path in menus.right
                  li(class=(link.childrens && 'nav-header'))
                    //- li.nav-header= category
                    a(href=path, class=(path == current && 'active'))= link.title
                    if link.childrens
                      ul
                      for childLink, childPath in link.childrens
                        li
                          a(href=childPath, class=(childPath == current && 'active'))= childLink.title
          if regions.right
            - for content, className in regions.right
              div(class=className)!= content
block footer
  if regions.footer
    hr
    footer#footer.footer
      .container
        - for content, className in regions.footer
          div(class=className)!= content
