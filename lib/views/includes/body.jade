block header
  #header.navbar.navbar-inverse(class=use.bootstrap && use.bootstrap.fixedNavbar && 'navbar-fixed-top' || '')
    .navbar-inner
      div(class=use.bootstrap.fluid && 'container-fluid' || 'container')
        a.btn.btn-navbar(data-toggle="collapse", data-target=".nav-collapse")
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.brand(href="/")= site_name
        .nav-collapse.collapse
          if regions.navbarItems
            ul.nav
              - for item, path in regions.navbarItems
                li(class=path == current && 'active')
                  a(href=path)= item
          if true
            form.navbar-form.pull-right
              input.span2(type="text", placeholder="Email")
              input.span2(type="password", placeholder="Password")
              button.btn(type="submit") Sign in
          else
            .navbar-text.pull-right
              | Logged in as 
              a.navbar-link(href="/user/42") Username
block page
