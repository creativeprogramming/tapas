    div(class=use.bootstrap.fluid && 'row-fluid' || 'row')
      .span3
        .well.sidebar-nav
          ul.nav.nav-list
            li.nav-header Sidebar
            li.active: a(href="#") Link
            li: a(href="#") Link
            li: a(href="#") Link
            li: a(href="#") Link
            li.nav-header Sidebar
            li: a(href="#") Link
            li: a(href="#") Link
            li: a(href="#") Link
            li: a(href="#") Link
      .span9
        .hero-unit
          h1.page-title= title
          include messages
          block content
            p Lorem Ipsum
            p: a.btn.btn-primary.btn-large Learn more &raquo;
